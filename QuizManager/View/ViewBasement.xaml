<Page
    x:Class="QuizManager.View.ViewBasement"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:ViewModel="using:QuizManager.ViewModel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:QuizManager.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">


    <Page.DataContext>
        <ViewModel:ViewModelBasement />
    </Page.DataContext>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*" />
            
            
        </Grid.ColumnDefinitions>

        <StackPanel Grid.RowSpan="2">
            <ListView ItemsSource="{Binding Dates}" SelectedItem="{Binding SelectedDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel
                            Padding="0,5,0,10"
                            BorderBrush="#282b30"
                            BorderThickness="0,0,0,1">
                            <TextBlock FontSize="20" Text="{Binding Date}" />
                            <TextBlock FontSize="20" Text="{Binding EventType}" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>



        <!--  GridView Groups  Laura  -->

      

        <StackPanel x:Name="Hold_Grid" Grid.Row="0" Grid.Column="1">
            <GridView x:Name="Holdnavn_Grid" ItemsSource="{Binding SelectedDate.Groups, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding SelectedGroup, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">

                <GridView.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Margin="1"
                            BorderBrush="#FF060606"
                            BorderThickness="1">
                            <StackPanel Margin="5">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Margin="0,0,0,0" Text="{Binding TeamName}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Bord nummer #" />
                                    <TextBlock Margin="0,0,0,0" Text="{Binding TableNr}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Antal Deltagere:" />
                                    <TextBlock Margin="5,0,0,0" Text="{Binding Participants, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Alle betalt:" />
                                    <TextBlock Margin="5,0,0,0" Text="{Binding AllPaid}" />
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
            
            <!-- Tilføjelse af nye hold -->
            <StackPanel  BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" VerticalAlignment="Top">
                <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Orientation="Horizontal">
                    <StackPanel Margin="0,0,5,0">
                        <TextBlock Text="Holdnavn:"/>
                        <TextBlock Text="Tlf nummer:"/>
                        <TextBlock Text="Antal deltagere:"/>
                        <TextBlock Text="Bord Nr: "/>
                    </StackPanel>
                    <StackPanel>
                        <TextBox Text="{Binding TeamName, Mode=TwoWay}"/>
                        <TextBox Text="{Binding PhoneNumber, Mode=TwoWay}"/>
                        <TextBox Text="{Binding Participants, Mode=TwoWay}"/>
                        <TextBox Text="{Binding TableNr, Mode=TwoWay}"/>
                    </StackPanel>
                </StackPanel>
                <Button Content="Add Group" HorizontalAlignment="Center">
                    <Interactivity:Interaction.Behaviors>
                        <Core:EventTriggerBehavior EventName="Click">
                            <Core:CallMethodAction TargetObject="{Binding Mode=OneWay}" MethodName="AddGroup"/>
                        </Core:EventTriggerBehavior>
                    </Interactivity:Interaction.Behaviors>
                </Button>
            </StackPanel>
            <!--Slut tilføjelse af hold-->
            
        </StackPanel>
        <!--End of gridview-->


        <!--  Edit groups - Laura  -->
        <StackPanel
            x:Name="Hold_Info"
            Grid.Row="0"
            Grid.Column="2">
            <StackPanel
                x:Name="Holdnavn"
                Margin="0,0,0,20"
                Orientation="Horizontal">
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="14"
                    Text="Team" />
                <TextBlock
                    Margin="5,0,0,0"
                    VerticalAlignment="Center"
                    FontSize="20"
                    Text="{Binding SelectedGroup.TeamName}" />
            </StackPanel>
            <StackPanel x:Name="Telefon_Nummer" Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center" Text="Telefon nummer:" />
                <TextBlock Margin="5,0,0,0" Text="{Binding SelectedGroup.PhoneNumber}" />
            </StackPanel>
            <StackPanel x:Name="Antal_Deltager" Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center" Text="Antal deltagere: " />
                <Button Margin="10,0,0,0" Content="-">
                    <Interactivity:Interaction.Behaviors>
                        <Core:EventTriggerBehavior EventName="Click">
                            <Core:CallMethodAction MethodName="RemoveOneParticipant" TargetObject="{Binding SelectedGroup, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </Core:EventTriggerBehavior>
                    </Interactivity:Interaction.Behaviors>
                </Button>
                <TextBox
                    Margin="5,0,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Text="{Binding SelectedGroup.Participants, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <Button Margin="10,0,0,0" Content="+">
                    <Interactivity:Interaction.Behaviors>
                        <Core:EventTriggerBehavior EventName="Click">
                            <Core:CallMethodAction MethodName="AddOneParticipant" TargetObject="{Binding SelectedGroup}" />
                        </Core:EventTriggerBehavior>
                    </Interactivity:Interaction.Behaviors>
                </Button>
            </StackPanel>
            <StackPanel x:Name="Fremmødte" Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center" Text="Fremmødte: " />
                <Button Margin="10,0,0,0" Content="-">
                    <Interactivity:Interaction.Behaviors>
                        <Core:EventTriggerBehavior EventName="Click">
                            <Core:CallMethodAction MethodName="RemoveOneAttending" TargetObject="{Binding SelectedGroup}" />
                        </Core:EventTriggerBehavior>
                    </Interactivity:Interaction.Behaviors>
                </Button>
                <TextBox
                    Margin="5,0,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Text="{Binding SelectedGroup.NumberOfAttendingParticipants, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <Button Margin="10,0,0,0" Content="+">
                    <Interactivity:Interaction.Behaviors>
                        <Core:EventTriggerBehavior EventName="Click">
                            <Core:CallMethodAction MethodName="AddOneAttending" TargetObject="{Binding SelectedGroup}" />
                        </Core:EventTriggerBehavior>
                    </Interactivity:Interaction.Behaviors>
                </Button>
            </StackPanel>
            <StackPanel x:Name="Bord_Nummer" Orientation="Horizontal">
                <TextBlock Text="Bord nr # " />
                <TextBlock Text="{Binding SelectedGroup.TableNr}" />
            </StackPanel>
            <StackPanel x:Name="Betalt" Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center" Text="Betalt: " />
                <Button Margin="10,0,0,0" Content="-">
                    <Interactivity:Interaction.Behaviors>
                        <Core:EventTriggerBehavior EventName="Click">
                            <Core:CallMethodAction MethodName="RemoveOnePayment" TargetObject="{Binding SelectedGroup}" />
                        </Core:EventTriggerBehavior>
                    </Interactivity:Interaction.Behaviors>
                </Button>
                <TextBox
                    Margin="5,0,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Text="{Binding SelectedGroup.NumberOfPayments, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <Button Margin="10,0,0,0" Content="+">
                    <Interactivity:Interaction.Behaviors>
                        <Core:EventTriggerBehavior EventName="Click">
                            <Core:CallMethodAction MethodName="AddOnePayment" TargetObject="{Binding SelectedGroup}" />
                        </Core:EventTriggerBehavior>
                    </Interactivity:Interaction.Behaviors>
                </Button>
            </StackPanel>
        </StackPanel>

        <!--  Rasmus  -->
        <StackPanel
            x:Name="Event_Plads"
            Grid.Row="1"
            Grid.Column="2"
            Orientation="Horizontal">
            <TextBlock
                x:Name="Antal_Pladser"
                Width="70"
                Height="75"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FocusVisualPrimaryBrush="#FF9B0A0A"
                FontSize="48"
                Foreground="#FF050589"
                Text="{Binding SelectedDate.TotalSeats}"
                TextWrapping="Wrap" />
            <Button
                x:Name="Add_Seat"
                Width="150"
                Height="50"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Add Seat">
                <Interactivity:Interaction.Behaviors>
                    <Core:EventTriggerBehavior EventName="Click">
                        <Core:CallMethodAction MethodName="AddSeat" TargetObject="{Binding Mode=OneWay}" />
                    </Core:EventTriggerBehavior>
                </Interactivity:Interaction.Behaviors>

            </Button>
            <Button
                x:Name="Subtract_Seat"
                Width="150"
                Height="50"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Subtract Seat">
                <Interactivity:Interaction.Behaviors>
                    <Core:EventTriggerBehavior EventName="Click">
                        <Core:CallMethodAction MethodName="SubtractSeat" TargetObject="{Binding Mode=OneWay}" />
                    </Core:EventTriggerBehavior>
                </Interactivity:Interaction.Behaviors>

            </Button>
        </StackPanel>
        <!--    -->






    </Grid>

</Page>
